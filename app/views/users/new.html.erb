<%if flash[:my_errors] %>
    <%flash[:my_errors].each do |e|%>
        <%=e%>
    <%end%>    
<%end%>

<%= form_for @user do |f| %>

<%= f.label :name%>
<%= f.text_field :name %>

<%= f.label :email%>
<%= f.text_field :email %>

<%= f.label :password%>
<%= f.text_field :password%>

<%= f.submit %>

<% end %>